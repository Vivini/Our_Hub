<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card-body">
        <div class="form_group">
          <%= simple_form_for @donation do |f| %>

          <%= f.input :name %>

          <%= f.input :address %>

          <%= f.input :description %>

          <%= f.input :longitude %>

          <%= f.input :latitude %>

          <%= f.input :timeframe %>

          <%= f.button :submit, class: "btn-primary" %>

          <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "See Donations", donations_path %>