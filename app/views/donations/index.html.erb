<div class="container">
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="list">
	<h3>These are the resources!</h3>
	<ul>
	  <% @donations.each do |donation|%>
      <div class="card">
        <li><%= link_to donation.name, donation_path(donation) %></li>
       

       <li> <%= cl_image_tag(donation.photos.first, :width=>300, :height=>200, :gravity=>"face", :radius=>"max", :crop=>"fill", :fetch_format=>:auto, :type=>"fetch") %></li>
      <% end %>
      </div>
  </ul>
  <%= link_to "Make a Donation", new_donation_path %>
 
	</div>
</div>
