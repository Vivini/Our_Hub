<% content_for :meta_title, "Add a donation on #{DEFAULT_META["meta_product_name"]}" %>
<div class="container new">
  <div id="new-header-decoration">
    <%= image_tag "new_header_element.png", alt: "Header element add donation page" %>
  </div>
    <h2>Add your donation</h2>
  <div class="new-searchform">
    <%= simple_form_for @donation, class: 'from-inline new' do |f| %>
    <%= f.input :name,  placeholder: 'Name the item',label:false, class: 'from-inline new' %>
    <%= f.input :address, placeholder: "Where do you want to meet?", label:false %>
    <%= f.input :description, placeholder: "Describe the article", label:false %>
    <%= f.input :timeframe, placeholder: "What time? Any other details?", label:false %>
    <%= f.input :photo, as: :file, input_html: { multiple: false }, label:false %>
    <%= f.button :submit, "ADD DONATION", class: "button-filled create" %>
    <% end %>
  </div>
    <div id="new-footer-decoration">
      <%= image_tag "new_footer_element.png", alt: "Footer element add donation page" %>
    </div>
</div>
